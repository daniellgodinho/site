{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "api/**",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/loader",
      "destination": "/api/loader.js"
    },
    {
      "source": "/(dnmenu|dnfarm|dnsoftwares|usermenu|userfarm)",
      "destination": "/api/raw/[slug].js"
    },
    {
      "source": "/raw/:slug*",
      "destination": "/api/raw/[slug].js"
    },
    {
      "source": "/api/raw/:slug*",
      "destination": "/api/raw/[slug].js"
    },
    {
      "source": "/static/(.*)",
      "destination": "/static/$1"
    },
    {
      "source": "/(.*\\.(js|css|json|ico|png|jpg|jpeg|svg|gif|webp|woff|woff2|ttf|eot))",
      "destination": "/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/(dnmenu|dnfarm|dnsoftwares|usermenu|userfarm|loader)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        }
      ]
    }
  ]
}